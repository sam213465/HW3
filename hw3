#include <iostream>
#include <fstream>
#include <string>
#include <vector>
#include <queue>

using namespace std;

struct Node {
  int r;
  int c;
  int dir;
  Node * next;
};

class Stack {
 private:
  Node * top {nullptr};
 public:
  Stack() {
    top = nullptr;
  }
  
  ~Stack() {
    while (top) {
    Node *temp = top;
    top = top->next;
    delete temp;
    }
  }

  bool Isempty() {
    if (top == NULL) {
      return true;
    }
    return false;
  }

  void push(int r, int c, int d) {
    Node *newnode = new Node;
    newnode->r = r;
    newnode->c = c;
    newnode->dir = d;
    newnode->next = top;
    top = newnode;
  }

  bool pop(int &x, int &y, int &dir) {
    if (!top) return false;
    x = top->r;
    y = top->c;
    dir = top->dir;
    Node *temp = top;
    top = top->next;
    delete temp;
    return true;
  }

  void Gettop(int &x, int &y, int &dir) {
    if (!top) return;
    x = top->r;
    y = top->c;
    dir = top->dir;
  }

  void changeTop(int d) {
    if (!top) return;
    top->dir = d;
  }

  Node* copy() {
    if (!top) return nullptr;
    Node* curr = top->next;
    Node* head = nullptr;
    
    for (; curr != nullptr; curr = curr->next) {
      Node* n = new Node(*curr);
      n->next = head;
      head = n;
    }
    
    return head;
  }

  int Getsize() {
    int size = 0;
    Node* curr = top;
    while (curr != nullptr) {
      size++;
      curr = curr->next;
    }
    return size;
  }
};

class Maze {
 private:
  int column {0};
  int row {0};
  char **grid;
  bool **visited;
 public:
  Maze(string filename) {
    ifstream fin(filename);
    if (fin.is_open()) {
      fin >> column >> row;

      grid = new char*[row];
      for (int i = 0; i < row; i++) {
        grid[i] = new char[column];
      }
      for (int i = 0; i < row; i++) {
        for (int j = 0; j < column; j++) {
          fin >> grid[i][j];
        }
      }
    }
    fin.close();

    visited = new bool*[row];
    for (int i = 0; i < row; i++) {
      visited[i] = new bool[column];
      for (int j = 0; j < column; j++) {
        visited[i][j] = false;
      }
    }
  }

  ~Maze() {
    for (int i = 0; i < row; i++) {
      delete [] grid[i];
      delete [] visited[i];
    }
    if (row != 0) delete [] grid;
    if (row != 0) delete [] visited;
  }

  bool GetVisited(int x, int y) {
    return visited[x][y];
  }

  void SetVisited(int x, int y, bool val) {
    visited[x][y] = val;
  }

  char Getgrid(int x, int y) {
    return grid[x][y];
  }

  void Setgrid(int x, int y, char val) {
    grid[x][y] = val;
  }

  int Getrow() {
    return row;
  }

  int Getcolumn() {
    return column;
  }

  bool Inbounds(int x, int y) {
    return (x >= 0 && x < row && y >= 0 && y < column);
  }

  void Print() {
    for (int i = 0; i < row; i++) {
      for (int j = 0; j < column; j++) {
        cout << grid[i][j];
      }
      cout << endl;
    }
  }

  void Road(Stack path) {
  	Restore();
    while (!path.Isempty()) {
      int x, y, dir;
      path.pop(x, y, dir);
      Setgrid(x, y, 'R');
    }
  }

  void Restore() {
  	for (int i = 0; i < row; i++) {
  	  for (int j = 0; j < column; j++) {
  	  	if (grid[i][j] == 'V' || grid[i][j] == 'R') {
  	      grid[i][j] = 'E';
        }
      }
    }
  }
};

int dx[4] = {0, 1, 0, -1};  // 右 下 左 上
int dy[4] = {1, 0, -1, 0};

void Mission1(Maze &maze) {
  if (maze.Getcolumn() == 0 || maze.Getrow() == 0) {
    return;
  }

  Stack path;
  int x = 0, y = 0;
  int dir = 0;

  path.push(x, y, dir);
  maze.Setgrid(x, y, 'V');
  maze.SetVisited(x, y, true);

  int curx, cury, curdir;
  path.Gettop(curx, cury, curdir);  // 取出目前位置

  while (!path.Isempty() && maze.Getgrid(curx, cury) != 'G') {

    bool moved = false;
    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue; // 超過邊界
      if (maze.Getgrid(nextx, nexty) == 'O' || maze.GetVisited(nextx, nexty) == true) continue;  // 遇到障礙或已走過

      moved = true;
      path.changeTop((nextdir + 1) % 4);  // 回溯時要從下個方向開始
      path.push(nextx, nexty, nextdir);  // 把下一步放進堆疊
      maze.SetVisited(nextx, nexty, true);
      
      break;
    }

    if (!moved) {
      path.pop(curx, cury, curdir);
    }
    if (!path.Isempty()) {
      path.Gettop(curx, cury, curdir);
      if (maze.Getgrid(curx, cury) == 'G') {
        break;
      }
    }
  }

  if (maze.Getgrid(curx, cury) == 'G') {
    // 將走過的路徑標回 V
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        if (maze.GetVisited(i, j) == true && maze.Getgrid(i, j) != 'G') {
          maze.Setgrid(i, j, 'V');
        }
      }
    }

    maze.Print();
    cout << endl;
    Node * road = path.copy();
    maze.Restore();
    for (Node * p = road; p != nullptr; p = p->next) {
      maze.Setgrid(p->r, p->c, 'R');
    }
    maze.Print();
    cout << endl << endl; 
  } else {
    // 未找到目標
    // 將走過的路徑標回 V
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        if (maze.GetVisited(i, j) == true) {
          maze.Setgrid(i, j, 'V');
        }
      }
    }
    maze.Print();
    cout << endl << endl;
  }
  return;
}

void Mission2(Maze &maze, int howmanygoals) {
  // 重設迷宮
  maze.Restore();
  for (int i = 0; i < maze.Getrow(); i++) {
    for (int j = 0; j < maze.Getcolumn(); j++) {
      maze.SetVisited(i, j, false);
    }
  }

  Stack path;
  int x = 0, y = 0, dir = 0;

  path.push(x, y, dir);
  maze.Setgrid(x, y, 'V');
  maze.SetVisited(x, y, true);

  int goals = 0;
  vector<pair<int, int>> visitedgoals;

  int curx, cury, curdir;
  path.Gettop(curx, cury, curdir);  // 取出目前位置

  bool moved;
  while (!path.Isempty() && goals < howmanygoals) {

    bool moved = false;
    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx  + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue; // 超過邊界
      if (maze.Getgrid(nextx, nexty) == 'O' || maze.GetVisited(nextx, nexty) == true) continue;  // 遇到障礙或已走過

      path.changeTop((nextdir + 1) % 4);  // 回溯時要從下個方向開始
      path.push(nextx, nexty, nextdir);  // 把下一步放進堆疊
      maze.SetVisited(nextx, nexty, true);

      moved = true;
      if (maze.Getgrid(nextx, nexty) == 'G') {
        goals++;
        visitedgoals.push_back({nextx, nexty});
      }
      break;
    }

    if (!moved) {
      path.pop(curx, cury, curdir);
    }

    if (!path.Isempty()) {
      path.Gettop(curx, cury, curdir);
    }
  }

  if (path.Isempty() && goals < howmanygoals) {
    // 未找到足夠目標，輸出一次 V
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        if (maze.GetVisited(i, j) == true && maze.Getgrid(i, j) != 'G') {
          maze.Setgrid(i, j, 'V');
        }
      }
    }
    maze.Print();
    cout << endl << endl;
    return;
  } else {
    // 找到足夠目標，輸出兩次迷宮
    // 第一次輸出 V
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        if (maze.GetVisited(i, j) == true && maze.Getgrid(i, j) != 'G') {
          maze.Setgrid(i, j, 'V');
        }
      }
    }
    maze.Print();
    cout << endl;

    // 第二次輸出 R
    maze.Restore();
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        maze.SetVisited(i, j, false);
      }
    }

    // 標記路徑為 R
    for (Node * p = path.copy(); p != nullptr; p = p->next) {
      if (maze.Getgrid(p->r, p->c) != 'G') {
        maze.Setgrid(p->r, p->c, 'R');
      }
    }

    maze.Print();
    cout << endl << endl;
    return;
  }
}

int main() {
  Maze *maze = nullptr;
  while (1) {
    cout << "*** (^_^) Data Structure (^o^) ***" << endl;
    cout << "*** Find the Goal(s) in a Maze ***" << endl;
    cout << "* 0. Quit                        *" << endl;
    cout << "* 1. Find one goal               *" << endl;
    cout << "* 2. Find goal(s) as requested   *" << endl;
    cout << "* 3. How many goals?             *" << endl;
    cout << "* 4. Shortest path to one goal   *" << endl;
    cout << "**********************************" << endl;
    string command;
    cout << "Input a command(0, 1, 2, 3, 4): ";
    cin >> command;
    if (command == "1") {
      int filenumber;
      cout << "\nInput a file number: ";
      cin >> filenumber;
      string filename = "input" + to_string(filenumber) + ".txt";
      if (maze != nullptr) delete maze;
      maze = new Maze(filename);
      Mission1(*maze);
    } else if (command == "2") {
      if (maze == nullptr) {
        cout << "### Execute command 1 to load a maze! ###" << endl;
        cout << endl;
	    } else {
        int goals;
        cout << "\nNumber of G (goals): ";
        cin >> goals;
        Mission2(*maze, goals);
      }
    } else if (command == "3") {
      if (maze == nullptr) {
        cout << "### Execute command 1 to load a maze! ###" << endl;
        cout << endl;
	    } else {
        //Mission3(*maze);
      }
    } else if (command == "4") {
      int number;
      cout << "\nInput a file number: ";
      cin >> number;
      string filename = "input" + to_string(number) + ".txt";
      Maze * maze_mission4;
      maze_mission4 = new Maze(filename);
      if (maze_mission4 == nullptr) {
        cout << filename << " does not exist!" << endl;
        cout << endl;
      } else {
        //Mission4(*maze_mission4);
      }
    } else if (command == "0") {
      break;
    } else {
      cout << "\nCommand does not exist!" << endl;
      cout << endl;
    }
  }
  return 0;
}
