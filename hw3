#include <iostream>
#include <fstream>
#include <string>
using namespace std;

struct Node {
  int r;
  int c;
  Node * next;
};

class Maze {
 private:
  int column;
  int row;
public;
  Maze() {
    ifstream fin(filename);
    fin >> column >> row;
}

class Stack {
 private:
  Node * top;
 public:
  Stack() {
    top = NULL
  }
  ~Stack() {
    while (top) {
      Node *temp = top;
      top = top->next;
      delete temp;
    }
  }
  void push(int x, int y) {
    Node *newnode = new Node;
    newnode->x = x;
    newnode->y = y;
    newnode->next = top;
    top = newnode;
}


int main() {
  Maze maze;
  while (1) {
    cout << "*** (^_^) Data Structure (^o^) ***" << endl;
    cout << "*** Find the Goal(s) in a Maze ***" << endl;
