#include <iostream>
#include <fstream>
#include <sstream>
#include <string>
#include <vector>
#include <queue>
#include <limits>

using namespace std;

struct Node {
  int r;
  int c;
  int dir;
  bool dir_changed[4] = {false, false, false, false};
  Node * next;
};

class Stack {
 private:
  Node * top {nullptr};
 public:
  Stack() {
    top = nullptr;
  }
  
  ~Stack() {
    while (top) {
    Node *temp = top;
    top = top->next;
    delete temp;
    }
  }

  bool Isempty() {
    if (top == NULL) {
      return true;
    }
    return false;
  }

  void Push(int r, int c, int d) {
    Node *newnode = new Node;
    newnode->r = r;
    newnode->c = c;
    newnode->dir = d;
    newnode->next = top;
    top = newnode;
  }

  bool Pop(int &x, int &y, int &dir) {
    if (!top) return false;
    x = top->r;
    y = top->c;
    dir = top->dir;
    Node *temp = top;
    top = top->next;
    delete temp;
    return true;
  }

  void Gettop(int &x, int &y, int &dir) {
    if (!top) return;
    x = top->r;
    y = top->c;
    dir = top->dir;
    bool dir_changed[4] = {false, false, false, false};
  }

  void ChangeTop(int d) {
    if (!top) return;
    top->dir = d;
  }

  Node* Copy() {
    if (!top) return nullptr;
    Node* curr = top->next;
    Node* head = nullptr;
    
    for (; curr != nullptr; curr = curr->next) {
      Node* n = new Node(*curr);
      n->next = head;
      head = n;
    }
    
    return head;
  }

  int Getsize() {
    int size = 0;
    Node* curr = top;
    while (curr != nullptr) {
      size++;
      curr = curr->next;
    }
    return size;
  }

  bool Getdir_changed(int d) {
    return top->dir_changed[d];
  }

  void Setdir_changed(int d) {
    top->dir_changed[d] = true;
  }
};

class Maze {
 private:
  int column {0};
  int row {0};
  char **grid;
  bool **visited;
 public:
  Maze(string filename) {
    ifstream fin(filename);
    if (fin.is_open()) {
      fin >> column >> row;

      grid = new char*[row];
      for (int i = 0; i < row; i++) {
        grid[i] = new char[column];
      }
      for (int i = 0; i < row; i++) {
        for (int j = 0; j < column; j++) {
          fin >> grid[i][j];
        }
      }
    } else {
      cout << endl << filename << " does not exist!" << endl << endl;
      return;
    }
    fin.close();

    visited = new bool*[row];
    for (int i = 0; i < row; i++) {
      visited[i] = new bool[column];
      for (int j = 0; j < column; j++) {
        visited[i][j] = false;
      }
    }
  }

  ~Maze() {
    for (int i = 0; i < row; i++) {
      delete [] grid[i];
      delete [] visited[i];
    }
    if (row != 0) delete [] grid;
    if (row != 0) delete [] visited;
  }

  bool GetVisited(int x, int y) {
    return visited[x][y];
  }

  void SetVisited(int x, int y, bool val) {
    visited[x][y] = val;
  }

  char Getgrid(int x, int y) {
    return grid[x][y];
  }

  void Setgrid(int x, int y, char val) {
    grid[x][y] = val;
  }

  int Getrow() {
    return row;
  }

  int Getcolumn() {
    return column;
  }

  bool Inbounds(int x, int y) {
    return (x >= 0 && x < row && y >= 0 && y < column);
  }

  void Print() {
    for (int i = 0; i < row; i++) {
      for (int j = 0; j < column; j++) {
        cout << grid[i][j];
      }
      cout << endl;
    }
  }

  void Road(Stack path) {
  	Restore();
    while (!path.Isempty()) {
      int x, y, dir;
      path.Pop(x, y, dir);
      Setgrid(x, y, 'R');
    }
  }

  void Restore() {
  	for (int i = 0; i < row; i++) {
  	  for (int j = 0; j < column; j++) {
  	  	if (grid[i][j] == 'V' || grid[i][j] == 'R') {
  	      grid[i][j] = 'E';
        }
      }
    }
  }
};

int dx[4] = {0, 1, 0, -1};  // 右 下 左 上
int dy[4] = {1, 0, -1, 0};

void Mission1(Maze &maze) {
  if (maze.Getcolumn() == 0 || maze.Getrow() == 0) {
    return;
  }

  Stack path;
  int x = 0, y = 0;
  int dir = 0;

  path.Push(x, y, dir);
  maze.Setgrid(x, y, 'V');
  maze.SetVisited(x, y, true);

  int curx, cury, curdir;
  path.Gettop(curx, cury, curdir);  // 取出目前位置

  while (!path.Isempty() && maze.Getgrid(curx, cury) != 'G') {

    bool moved = false;
    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue; // 超過邊界
      if (maze.Getgrid(nextx, nexty) == 'O' || maze.GetVisited(nextx, nexty) == true) continue;  // 遇到障礙或已走過

      moved = true;
      path.ChangeTop((nextdir + 1) % 4);  // 回溯時要從下個方向開始
      path.Push(nextx, nexty, nextdir);  // 把下一步放進堆疊
      maze.SetVisited(nextx, nexty, true);
      
      break;
    }

    if (!moved) {
      path.Pop(curx, cury, curdir);
    }
    if (!path.Isempty()) {
      path.Gettop(curx, cury, curdir);
      if (maze.Getgrid(curx, cury) == 'G') {
        break;
      }
    }
  }

  if (maze.Getgrid(curx, cury) == 'G') {
    // 將走過的路徑標回 V
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        if (maze.GetVisited(i, j) == true && maze.Getgrid(i, j) != 'G') {
          maze.Setgrid(i, j, 'V');
        }
      }
    }

    maze.Print();
    cout << endl;
    Node * road = path.Copy();
    maze.Restore();
    for (Node * p = road; p != nullptr; p = p->next) {
      maze.Setgrid(p->r, p->c, 'R');
    }
    maze.Print();
    cout << endl << endl; 
  } else {
    // 未找到目標
    // 將走過的路徑標回 V
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        if (maze.GetVisited(i, j) == true) {
          maze.Setgrid(i, j, 'V');
        }
      }
    }
    maze.Print();
    cout << endl << endl;
  }
  return;
}

void Mission2(Maze &maze, int howmanygoals) {
  // 重設迷宮
  maze.Restore();
  for (int i = 0; i < maze.Getrow(); i++) {
    for (int j = 0; j < maze.Getcolumn(); j++) {
      maze.SetVisited(i, j, false);
    }
  }

  Stack path;
  vector<pair<int, int>> visitedgoals;
  int curx = 0, cury = 0, curdir = 0;
  int goals = 0;

  path.Push(curx, cury, curdir);
  maze.Setgrid(curx, cury, 'V');
  maze.SetVisited(curx, cury, true);

  path.Gettop(curx, cury, curdir);  // 取出目前位置

  bool moved;
  while (!path.Isempty() && goals < howmanygoals) {

    bool moved = false;
    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx  + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue; // 超過邊界
      if (maze.Getgrid(nextx, nexty) == 'O' || maze.GetVisited(nextx, nexty) == true) continue;  // 遇到障礙或已走過

      path.ChangeTop((nextdir + 1) % 4);  // 回溯時要從下個方向開始
      path.Push(nextx, nexty, nextdir);  // 把下一步放進堆疊
      maze.SetVisited(nextx, nexty, true);

      moved = true;
      if (maze.Getgrid(nextx, nexty) == 'G') {
        goals++;
        visitedgoals.push_back({nextx, nexty});
      }
      break;
    }

    if (!moved) {
      path.Pop(curx, cury, curdir);
    }

    if (!path.Isempty()) {
      path.Gettop(curx, cury, curdir);
    }
  }

  if (path.Isempty() && goals < howmanygoals) {
    // 未找到足夠目標，輸出一次 V
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        if (maze.GetVisited(i, j) == true && maze.Getgrid(i, j) != 'G') {
          maze.Setgrid(i, j, 'V');
        }
      }
    }
    maze.Print();
    cout << endl << endl;
    return;
  } else {
    // 找到足夠目標，輸出兩次迷宮
    // 第一次輸出 V
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        if (maze.GetVisited(i, j) == true && maze.Getgrid(i, j) != 'G') {
          maze.Setgrid(i, j, 'V');
        }
      }
    }
    maze.Print();
    cout << endl;

    // 第二次輸出 R
    maze.Restore();
    for (int i = 0; i < maze.Getrow(); i++) {
      for (int j = 0; j < maze.Getcolumn(); j++) {
        maze.SetVisited(i, j, false);
      }
    }

    // 標記路徑為 R
    for (Node * p = path.Copy(); p != nullptr; p = p->next) {
      if (maze.Getgrid(p->r, p->c) != 'G') {
        maze.Setgrid(p->r, p->c, 'R');
      }
    }

    maze.Print();
    cout << endl << endl;
    return;
  }
}

void Mission3(Maze &maze) {
  // 重設迷宮
  maze.Restore();
  for (int i = 0; i < maze.Getrow(); i++) {
    for (int j = 0; j < maze.Getcolumn(); j++) {
      maze.SetVisited(i, j, false);
    }
  }

  Stack path;
  vector<pair<int, int>> visitedgoals;
  int goals = 0;
  int curx = 0, cury = 0, curdir = 0;

  path.Push(curx, cury, curdir);
  maze.Setgrid(curx, cury, 'V');
  maze.SetVisited(curx, cury, true);

  while (!path.Isempty()) {
    bool moved = false;
    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx  + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue; // 超過邊界
      if (maze.Getgrid(nextx, nexty) == 'O' || maze.GetVisited(nextx, nexty) == true) continue;  // 遇到障礙或已走過

      path.ChangeTop((nextdir + 1) % 4);  // 回溯時要從下個方向開始
      path.Push(nextx, nexty, nextdir);  // 把下一步放進堆疊

      moved = true;
      if (maze.Getgrid(nextx, nexty) == 'G' && maze.GetVisited(nextx, nexty) == false) {
        goals++;
        visitedgoals.push_back({nextx, nexty});
      }
      maze.SetVisited(nextx, nexty, true);
      break;
    }

    if (!moved) {
      path.Pop(curx, cury, curdir);
    }

    if (!path.Isempty()) {
      path.Gettop(curx, cury, curdir);
    }
  }

  for (int i = 0; i < maze.Getrow(); i++) {
    for (int j = 0; j < maze.Getcolumn(); j++) {
      if (maze.GetVisited(i, j) == true && maze.Getgrid(i, j) != 'G') {
        maze.Setgrid(i, j, 'V');
      }
    }
  }



  maze.Print();
  cout << endl;
  cout << "The maze has " << goals << " goal(s) in total." << endl << endl;

  return;
}

void Mission4(Maze &maze) {
  if (maze.Getcolumn() == 0 || maze.Getrow() == 0) {
    return;
  }

  Stack path;
  Node * bestpath = nullptr;

  int curx = 0, cury = 0, curdir = 0;
  int bestsize = 0;
  path.Push(curx, cury, curdir);
  maze.Setgrid(curx, cury, 'V');
  maze.SetVisited(curx, cury, true);

  while (!path.Isempty()) {
   

    /*  追蹤目前路徑狀態用
    cout << "Current path size: " << path.Getsize() << endl;
    maze.Print();
    cout << endl;
    */
    bool moved = false;
    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx  + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue; // 超過邊界
      if (maze.Getgrid(nextx, nexty) == 'O' || path.Getdir_changed(nextdir)) continue;  // 遇到障礙或已走過
      if (bestpath != nullptr && path.Getsize() >= bestsize - 1) continue; 
      if (maze.Getgrid(nextx, nexty) == 'V') continue;

      path.ChangeTop((nextdir + 1) % 4);  // 回溯時要從下個方向開始
      path.Setdir_changed(nextdir);
      path.Push(nextx, nexty, nextdir);  // 把下一步放進堆疊
      maze.SetVisited(nextx, nexty, true);
      if (maze.Getgrid(nextx, nexty) != 'G') maze.Setgrid(nextx, nexty, 'V');

      moved = true;
      if (maze.Getgrid(nextx, nexty) == 'G') {
        // 找到一條到達目標的路徑，檢查是否為最短路徑
        bestpath = path.Copy();
        bestsize = path.Getsize();
      }
      maze.SetVisited(nextx, nexty, true);
      break;
    }

    if (!moved) {
      if (maze.Getgrid(curx, cury) != 'G') {
        maze.Setgrid(curx, cury, 'E');
      }
      path.Pop(curx, cury, curdir);
    }

    if (!path.Isempty()) {
      path.Gettop(curx, cury, curdir);
    }
  }

  for (int i = 0; i < maze.Getrow(); i++) {
    for (int j = 0; j < maze.Getcolumn(); j++) {
      if (maze.GetVisited(i, j) == true && maze.Getgrid(i, j) != 'G') {
        maze.Setgrid(i, j, 'V');
      }
    }
  }
  maze.Print();
  cout << endl;

  if (bestsize == 0) {
    cout << "\n### There is no path to find a goal! ### " << endl << endl;
    return;
  }

  maze.Restore();
  for (Node * p = bestpath; p != nullptr; p = p->next) {
    if (maze.Getgrid(p->r, p->c) != 'G') {
      maze.Setgrid(p->r, p->c, 'R');
    }
  }
  maze.Print();
  cout << endl;
  cout << "Shortest path length = " << bestsize << endl << endl;

  return;
}

// 檢查字串是否全為數字
bool Checkstring(string str) {
  if (str.length() == 0) {
    return false;
  }
  for (int i = 0; i < str.size(); i++) {
    if (i == 0 && str[i] == '-') {
      continue;
    }
    if (str[i] < '0' || str[i] > '9') {
      return false;
    }
  }
  return true;
}

int main() {
  Maze *maze = nullptr;
  Maze *maze_mission4 = nullptr;
  while (1) {
    cout << "*** (^_^) Data Structure (^o^) ***" << endl;
    cout << "*** Find the Goal(s) in a Maze ***" << endl;
    cout << "* 0. Quit                        *" << endl;
    cout << "* 1. Find one goal               *" << endl;
    cout << "* 2. Find goal(s) as requested   *" << endl;
    cout << "* 3. How many goals?             *" << endl;
    cout << "* 4. Shortest path to one goal   *" << endl;
    cout << "**********************************" << endl;
    string command;
    cout << "Input a command(0, 1, 2, 3, 4): ";
    cin >> command;

    if (command == "1") {
      string filenumber;
      cout << "\nInput a file number: ";
      cin >> filenumber;
      string filename = "input" + filenumber + ".txt";
      if (maze != nullptr) delete maze;
      maze = new Maze(filename);
      Mission1(*maze);
    } else if (command == "2") {
      if (maze == nullptr) {
        cout << "\n### Execute command 1 to load a maze! ###" << endl;
        cout << endl;
	    } else {
        string goals;
        int goals_int = 1;
        cout << "\nNumber of G (goals): ";

        cin >> goals;
        while (true) {
          goals_int = 1;
          if (Checkstring(goals)) {
            goals_int = stoi(goals);
            if (goals_int > 0 && goals_int <= 100) {
              break;
            }
          }
          cin.clear();
          cin.ignore(numeric_limits<streamsize>::max(), '\n');  //忽略 streamsize 型別所能表示的最大值或到達換行符為止的所有字元
          if (goals_int == 0 || goals_int > 100) cout << "\n### The number must be in [1,100] ###" << endl;
          cout << "\nNumber of G (goals): ";
          cin >> goals;
        }
        Mission2(*maze, goals_int);
      }
    } else if (command == "3") {
      if (maze == nullptr) {
        cout << "\n### Execute command 1 to load a maze! ###" << endl;
        cout << endl;
	    } else {
        Mission3(*maze);
      }
    } else if (command == "4") {
      string filenumber;
      cout << "\nInput a file number: ";
      cin >> filenumber;
      string filename = "input" + filenumber + ".txt";
      if (maze_mission4 != nullptr) delete maze;
      maze_mission4 = new Maze(filename);
      Mission4(*maze_mission4);
    } else if (command == "0") {
      break;
    } else {
      cout << "\nCommand does not exist!" << endl;
      cout << endl;
    }
  }
  return 0;
}
