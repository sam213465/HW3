#include <iostream>
#include <fstream>
#include <string>
#include <vector>
#include <queue>
using namespace std;

struct Node {
  int r;
  int c;
  int dir;
  Node * next;
};

class Maze {
 private:
  int column {0};
  int row {0};
  char **grid;
 public:
  Maze(string filename) {
    ifstream fin(filename);
    if (!fin.is_open()) {
      std::cout << endl << filename << " does not exist!" << endl << endl;
    } else {
      fin >> column >> row;

      grid = new char*[row];
      for (int i = 0; i < row; i++) {
        grid[i] = new char[column];
      }
      for (int i = 0; i < row; i++) {
        for (int j = 0; j < column; j++) {
          fin >> grid[i][j];
        }
      }
    }
    fin.close();
  }

  ~Maze() {
    for (int i = 0; i < row; i++) {
      delete [] grid[i];
    }
    if (row != 0) delete [] grid;
  }

  char Getgrid(int x, int y) {
  	return grid[x][y];
  }
  void Setgrid(int x, int y, char val) {
    grid[x][y] = val;
  }
  int Getrow() {
  	return row;
  }
  int Getcolumn() {
  	return column;
  }

  bool Inbounds(int x, int y) {
    if (x >= 0 && x < row && y >= 0 && y < column) {
      return true;
	  }
	return false;
  }
  void Print(int row, int column) {
  	for (int i = 0; i < row; i++) {
  	  for (int j = 0; j < column; j++) {
  	  	std::cout << grid[i][j];
      }
	  std::cout << endl;
	  }
  }

  void Copy(int row, int column) {
  	for (int i = 0; i < row; i++) {
  	  for (int j = 0; j < column; j++) {
  	  	if (grid[i][j] == 'V') {
  	      grid[i][j] = 'R';
		    }
      }
    }
  }

  void Restore(int row, int column) {
  	for (int i = 0; i < row; i++) {
  	  for (int j = 0; j < column; j++) {
  	  	if (grid[i][j] == 'V' || grid[i][j] == 'R') {
  	      grid[i][j] = 'E';
        }
      }
    }
  }

  void Change(int x, int y) {
    grid[x][y] = 'G';
  }
};

class Stack {
 private:
  Node * top;
  int size {0};
 public:
  Stack() {
    top = NULL;
  }
  ~Stack() {
    while (top) {
    Node *temp = top;
    top = top->next;
    delete temp;
    }
  }

  bool Isempty() {
    if (top == NULL) {
      return true;
    }
    return false;
  }

  void push(int r, int c, int d) {
    Node *newnode = new Node;
    newnode->r = r;
    newnode->c = c;
    newnode->dir = d;
    newnode->next = top;
    top = newnode;
    size++;
  }

  bool pop(int &x, int &y, int &dir) {
    if (!top) return false;
    x = top->r;
    y = top->c;
    dir = top->dir;
    Node *temp = top;
    top = top->next;
    delete temp;
    size--;
    return true;
  }

  void Gettop(int &x, int &y, int &dir) {
    if (!top) return;
    x = top->r;
    y = top->c;
    dir = top->dir;
  }

Node* copy() {
    if (!top) return nullptr;

    Node* newTop = new Node;
    newTop->r = top->r;
    newTop->c = top->c;
    newTop->dir = top->dir;
    newTop->next = nullptr;

    Node* currOld = top->next;
    Node* currNew = newTop;

    while (currOld) {
        Node* n = new Node;
        n->r = currOld->r;
        n->c = currOld->c;
        n->dir = currOld->dir;
        n->next = nullptr;
        currNew->next = n;
        currNew = n;
        currOld = currOld->next;
    }

    return newTop;
}


  void setPath(Node * head) {
    top = head;
  }

  int getSize() {
    return size;
  }

  void setSize(int s) {
    size = s;
  }
};

int dx[4] = {0, 1, 0, -1};  // 右 下 左 上
int dy[4] = {1, 0, -1, 0};

void Mission1(Maze &maze) {
  if (maze.Getcolumn() == 0 || maze.Getrow() == 0) {
    return;
  }

  Stack path;
  int x = 0, y = 0;
  int dir = 0;

  path.push(x, y, dir);
  maze.Setgrid(x, y, 'V');

  int curx, cury, curdir;

  while (!path.Isempty()) {
    path.pop(curx, cury, curdir);  // 取出目前位置

    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue; // 超過邊界
      if (maze.Getgrid(nextx, nexty) == 'O' || maze.Getgrid(nextx, nexty) == 'V') continue;  // 遇到障礙或已走過

      path.push(curx, cury, nextdir);  // 回溯時要從下個方向開始
      path.push(nextx, nexty, nextdir);  // 把下一步放進堆疊

      if (maze.Getgrid(curx, cury) == 'G') {  // 遇到目標
        break;
			}

      if (maze.Getgrid(nextx, nexty) != 'G') {
        maze.Setgrid(nextx, nexty, 'V');  // 標記已走過
		  }
      break;
    }

    if (maze.Getgrid(curx, cury) == 'G') {
      maze.Print(maze.Getrow(), maze.Getcolumn());
      maze.Copy(maze.Getrow(), maze.Getcolumn());
      std::cout << endl;
      maze.Print(maze.Getrow(), maze.Getcolumn());
      cout << endl << endl;
      return;
    }
  }
  maze.Print(maze.Getrow(), maze.Getcolumn());
  cout << endl << endl;
}

void Mission2(Maze &maze, int howmanygoals) {
  Stack path;
  maze.Restore(maze.Getrow(), maze.Getcolumn());
  int x = 0, y = 0, dir = 0;
  int goals = 0;
  vector<pair<int,int>> visitedgoals;

  path.push(x, y, dir);
  maze.Setgrid(x, y, 'V');

  while (!path.Isempty()) {
    int curx, cury, curdir;
    path.pop(curx, cury, curdir);


    bool moved = false;
    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue;

      if (maze.Getgrid(nextx, nexty) == 'O' || maze.Getgrid(nextx, nexty) == 'V') continue;

      if (maze.Getgrid(nextx, nexty) == 'G') {
        bool alreadyvisited = false;
        for (int i = 0; i < goals; i++) {
          if (visitedgoals[i].first == nextx && visitedgoals[i].second == nexty) {
            alreadyvisited = true;
            break;
          }
        }
      if (!alreadyvisited) {
        visitedgoals.push_back({nextx, nexty});
        goals++;

        if (goals == howmanygoals) {
          for (int i = 0; i < goals; i++) {
            maze.Change(visitedgoals[i].first, visitedgoals[i].second);
          }

          maze.Print(maze.Getrow(), maze.Getcolumn());
          maze.Copy(maze.Getrow(), maze.Getcolumn());
          cout << endl;
          maze.Print(maze.Getrow(), maze.Getcolumn());
          cout << endl << endl;
          return;
        }
      }

      maze.Setgrid(nextx, nexty, 'V'); //將 G 標記為 V
      } else {
        maze.Setgrid(nextx, nexty, 'V'); // E 標記為 V
      }


      path.push(curx, cury, (nextdir + 1) % 4); // 回退點
      path.push(nextx, nexty, nextdir);

      moved = true;
      break;
    }

      if (!moved) continue;
    }

    // 沒找到足夠目標，輸出一次 V
    for (int i = 0; i < goals; i++) {
      maze.Change(visitedgoals[i].first, visitedgoals[i].second);
    }
    maze.Print(maze.Getrow(), maze.Getcolumn());
    cout << endl << endl;
}


void Mission3(Maze &maze) {
  maze.Restore(maze.Getrow(), maze.Getcolumn());
  Stack path;
  int x = 0, y = 0, dir = 0;
  int goals = 0;
  vector<pair<int, int>> goal;  // 記錄走過的目標
  path.push(x, y, dir);
  maze.Setgrid(x, y, 'V');

  int curx, cury, curdir;

  while (!path.Isempty()) {
    path.pop(curx, cury, curdir);
    bool moved = false;
    for (; curdir < 4; curdir++) {
      int nextx = curx + dx[curdir];
      int nexty = cury + dy[curdir];

      if (!maze.Inbounds(nextx, nexty)) continue;  // 超過邊界
      if (maze.Getgrid(nextx, nexty) == 'O' || maze.Getgrid(nextx, nexty) == 'V') continue;  // 遇到障礙或已走過


      path.push(curx, cury, curdir + 1);  //如果下一格走不通，回來時要嘗試下一個方向
      path.push(nextx, nexty, 0);  // 把下一步放進堆疊

      if (maze.Getgrid(nextx, nexty) != 'G') {
        maze.Setgrid(nextx, nexty, 'V');  // 標記已走過
      } else {
        bool same = false;
        if (goals == 0) {
          goal.push_back({nextx, nexty});
          goals++;
        } else if (goals >= 1) {
          for (int i = 0; i < goals; i++) {
            if (goal[i].first == nextx && goal[i].second == nexty) {
              same = true;
              continue;
					  }
				  }
				  if (!same) {  // 目標位置不一樣
				    goal.push_back({nextx, nexty});
				    goals++;
				  }
				}
      }
      moved = true;
      break;
    }
    if (!moved) continue;  //若四個方向都不通，就回到上一次的節點
  }
  maze.Print(maze.Getrow(), maze.Getcolumn());
  cout << endl;
  cout << "The maze has " << goals << " goal(s) in total." << endl << endl;
}

struct Node_mission4 {
  int x, y;
  int distance;
};
int dx4[4] = {-1, 0, 1, 0}; // 上、右、下、左
int dy4[4] = {0, 1, 0, -1};
void Mission4(Maze &maze) {
  Stack path, bestpath;
  int x = 0, y = 0, dir = 0;

  path.push(x, y, dir);
  maze.Setgrid(x, y, 'V');

  int curx, cury, curdir;
  while (!path.Isempty()) {
    path.pop(curx, cury, curdir);
    cout << "Current position: (" << curx << ", " << cury << "), Path size: " << path.getSize() + 1 << endl;
    maze.Print(maze.Getrow(), maze.Getcolumn());
    cout << endl;

    for (int i = 0; i < 4; i++) {
      int nextdir = (curdir + i) % 4;
      int nextx = curx + dx[nextdir];
      int nexty = cury + dy[nextdir];

      if (!maze.Inbounds(nextx, nexty)) continue;
      if (maze.Getgrid(nextx, nexty) == 'O' || maze.Getgrid(nextx, nexty) == 'V') continue;
      if (!bestpath.Isempty() && path.getSize() + 2 >= bestpath.getSize()) continue;

      path.push(curx, cury, nextdir);
      path.push(nextx, nexty, nextdir);

      cout << nextx << "," << nexty << ", " << nextdir << endl;
      if (maze.Getgrid(nextx, nexty) != 'G') {
        maze.Setgrid(nextx, nexty, 'V');
      } else {
        // 找到一條到達目標的路徑，檢查是否為最短路徑
        if (bestpath.getSize() == 0 || path.getSize() < bestpath.getSize()) {
          // 複製目前路徑為最佳路徑
          bestpath.setPath(path.copy());
          bestpath.setSize(path.getSize());
          int bestsize = bestpath.getSize();
        }
      }
      break;  // 只走一個方向
    }
  }
  maze.Print(maze.Getrow(), maze.Getcolumn());
  cout << endl;
  maze.Restore(maze.Getrow(), maze.Getcolumn());
  // 標記最佳路徑
  vector<vector<bool>> visited(maze.Getrow(), vector<bool>(maze.Getcolumn(), false));
  vector<vector<pair<int,int>>> shortpath(maze.Getrow(), vector<pair<int,int>>(maze.Getcolumn(), {-1, -1}));
  queue<Node_mission4> q;

  q.push({0, 0, 0});
  visited[0][0] = true;
  maze.Setgrid(0, 0, 'V');

  while (!q.empty()) {
    Node_mission4 cur = q.front();  // 每次從佇列取出一個節點
    q.pop();
    //cout << cur.x << "," << cur.y << "->1" << endl;
    if (maze.Getgrid(cur.x, cur.y) == 'G') {  // 找到最短路徑
      int spx = cur.x;
      int spy = cur.y;
      maze.Restore(maze.Getrow(), maze.Getcolumn());
      while (!(spx == 0 && spy == 0)) {
        maze.Setgrid(spx, spy, 'R');
        auto sp = shortpath[spx][spy];
        spx = sp.first;
        spy = sp.second;
        maze.Setgrid(cur.x, cur.y, 'G');
      }
      maze.Setgrid(0, 0, 'R');
      cout << endl;
      maze.Print(maze.Getrow(), maze.Getcolumn());
      cout << endl;
      cout << "Shortest path length = " << cur.distance+1 << endl;
      cout << endl;
      return;
    }

    for (int i = 0; i < 4; i++) {
      int nextx = cur.x + dx4[i];
      int nexty = cur.y + dy4[i];

      if (!maze.Inbounds(nextx, nexty)) continue;
      if (maze.Getgrid(nextx, nexty) == 'O' || visited[nextx][nexty]) continue;  // 遇到障礙或已走過

      visited[nextx][nexty] = true;  // 標記已走過
      shortpath[nextx][nexty] = {cur.x, cur.y};
      if (maze.Getgrid(nextx, nexty) != 'G')
      maze.Setgrid(nextx, nexty, 'V');
      //cout << nextx << "," << nexty << endl;
      q.push({nextx, nexty, cur.distance + 1});  // 把下一格加入佇列，並讓距離加 1
    }
  }
  maze.Print(maze.Getrow(), maze.Getcolumn());
  cout << endl;
}

int main() {
  Maze *maze = nullptr;
  Maze *maze_mission4 = nullptr;
  while (1) {
    cout << "*** (^_^) Data Structure (^o^) ***" << endl;
    cout << "*** Find the Goal(s) in a Maze ***" << endl;
    cout << "* 0. Quit                        *" << endl;
    cout << "* 1. Find one goal               *" << endl;
    cout << "* 2. Find goal(s) as requested   *" << endl;
    cout << "* 3. How many goals?             *" << endl;
    cout << "* 4. Shortest path to one goal   *" << endl;
    cout << "**********************************" << endl;
    string command;
    cout << "Input a command(0, 1, 2, 3, 4): ";
    cin >> command;
    if (command == "1") {
      int filenumber;
      cout << "\nInput a file number: ";
      cin >> filenumber;
      string filename = "input" + to_string(filenumber) + ".txt";
      if (maze != nullptr) delete maze;
      maze = new Maze(filename);
      Mission1(*maze);
    } else if (command == "2") {
      if (maze == nullptr) {
        cout << "### Execute command 1 to load a maze! ###" << endl;
        cout << endl;
	    } else {
        int goals;
        cout << "\nNumber of G (goals): ";
        cin >> goals;
        Mission2(*maze, goals);
      }
    } else if (command == "3") {
      if (maze == nullptr) {
        cout << "### Execute command 1 to load a maze! ###" << endl;
        cout << endl;
	    } else {
        Mission3(*maze);
      }
    } else if (command == "4") {
      int number;
      cout << "\nInput a file number: ";
      cin >> number;
      string filename = "input" + to_string(number) + ".txt";
      if (maze_mission4 != nullptr) delete maze;
      maze_mission4 = new Maze(filename);
      Mission1(*maze_mission4);
    } else if (command == "0") {
      break;
    } else {
      cout << "\nCommand does not exist!" << endl;
      cout << endl;
    }
  }
  return 0;
}
