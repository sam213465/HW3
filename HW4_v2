#include <iostream>
#include <fstream>
#include <sstream>
#include <string>
#include <vector>
#include <ctime>
#include <iomanip>
using namespace std;

struct Node {
  int oid;
  int arrival;
  int duration;
  int timeout;
  Node *next;
};

class Queue {
 private:
   Node * backptr {nullptr};
   Node * frontptr {nullptr};
   int size = 0;
 public:
  bool Isempty() {
    if (backptr == nullptr) {
      return true;
    }
    return false;
  }

  void Enqueue(int o, int a, int d, int t) {
    Node *newptr = new Node;
    newptr->oid = o;
    newptr->arrival = a;
    newptr->duration = d;
    newptr->timeout = t;
    newptr->next = nullptr;

    if (Isempty()) {
      frontptr = newptr;
    } else {
      backptr->next = newptr;
    }
    backptr = newptr;
    size++;
  }

  void Dequeue() {
    if (Isempty()) {
      return;
    }
    Node *temp = frontptr;
    if (frontptr == backptr) {
      frontptr = nullptr;
      backptr = nullptr;
    } else {
      frontptr = frontptr->next;
    }
    temp->next = nullptr;
    delete temp;
    size--;
  }

  int Getsize() {
    return size;
  }

  void Getfront(int &o, int &a, int &d, int &t) {
    if (Isempty()) {
      return;
    }
    o = frontptr->oid;
    a = frontptr->arrival;
    d = frontptr->duration;
    t = frontptr->timeout;
  }
};



class Data {
 private:
  int column = 0;
  int row = 0;
  vector<vector<string>> data;
  vector<vector<int>> intdata;
 public:
  double Read(string filename) {
    clock_t start, end;
    start = clock();

    ifstream fin(filename);
    if (!fin.is_open()) {
      cout << "### "<< filename << " does not exist! ###\n\n";
      return -1;
    }
    string line;
    while (getline(fin, line)) {
    if (line.empty()) continue; // 跳過空行

    stringstream ss(line);
    string value;
    vector<string> row;
    while (ss >> value) {
      row.push_back(value);
    }
    data.push_back(row);
  }
    end = clock();
    double time = double(end - start) * 1000;
    fin.close();
    return time;
  }

  void Print() {
    cout << "\t";
    if (data[0][0] != "OID" || data[0][0] == "OID") {
      cout << "OID\t";
    }
    if (data[0][1] != "Arrival" || data[0][1] == "Arrival") {
      cout << "Arrival\t";
    }
    if (data[0][2] != "Duration" || data[0][2] == "Duration") {
      cout << "Duration\t";
    }
    if (data[0][3] != "TimeOut" || data[0][3] == "TimeOut") {
      cout << "TimeOut\n";
    }
    for (int i = 1; i < data.size(); i++) {
       if (i < data.size()) {
        cout << "(" << i << ") \t";
      }
      for (int j = 0; j < data[i].size(); j++) {
          if (j <= 2) {
            cout << data[i][j] << "\t";
          } else {
            cout << data[i][j];
          }
        }
        cout << endl;

    }
  }

  void Stringtoint() {
    intdata.resize(data.size()-1);
    for (int i = 1; i < data.size(); i++) {
      intdata[i-1].resize(data[i].size());
      for (int j = 0; j < data[i].size(); j++) {
        intdata[i-1][j] = stoi(data[i][j]);
      }
    }
  }

  double shellSort() {
    clock_t start, end;
    start = clock();
    int n = intdata.size();
    for (int h = intdata.size()/2; h > 0; h = h/2) {
      for (int unsorted = h; unsorted < n; ++unsorted) {
        vector<int> temp = intdata[unsorted];
        int j = unsorted;
        while (j >= h && intdata[j - h][1] >= temp[1]) {
          if (intdata[j-h][1] == temp[1]) {
            if (intdata[j-h][0] > temp[0]) {
              intdata[j] = intdata[j - h];
            } else {
              j -= h;
              continue;
            }
          } else {
            intdata[j] = intdata[j - h];   // 移動整行
          }
          j -= h;
          intdata[j] = temp;
        }
      }
    }
    end = clock();
    double time = double(end - start) * 1000;
    return time;
  }

  double WriteFile(string filename) {
    clock_t start, end;
    start = clock();
    ofstream fout(filename);

    if (!fout.is_open()) {
        cout << "Cannot open file!" << endl;
        return 0;
    }
    fout << "OID\tArrival\tDuration\tTimeOut" << endl;
    for (int i = 0; i < intdata.size(); i++) {
        for (int j = 0; j < intdata[i].size(); j++) {
            fout << intdata[i][j];
            if (j != intdata[i].size() - 1) fout << "\t"; // 每個數字用空格隔開
        }
        fout << "\n"; // 換行
    }
    end = clock();
    double time = double(end - start) * 1000;
    fout.close();
    return time;
}

  void Clean() {
    data.clear();
    intdata.clear();
  }

void One(string filename) {
    Queue q;
    ofstream fout(filename);
    if (!fout.is_open()) {
        cout << "Cannot open file!" << endl;
        return;
    }
    int done = 0;
    int n = intdata.size();
    int index = 0;
    int idleTime = 0;
    vector<vector<int>> AbortList;
    vector<vector<int>> TimeoutList;
    int illegal = 0;
while (index < n || !q.Isempty()) {

    if (q.Isempty() && index < n && idleTime < intdata[index][1])
        idleTime = intdata[index][1];


    while (index < n && intdata[index][1] < idleTime) {
        int oid = intdata[index][0];
        int arr = intdata[index][1];
        int dur = intdata[index][2];
        int tol = intdata[index][3];
        if (arr + dur > tol) {
          index++;
          illegal++;
          continue;
        }
        if (q.Getsize() < 3) {
            q.Enqueue(oid, arr, dur, tol);
          //cout << oid << " " << arr << " " << dur << " " << tol << "->inqueue" << endl;
        } else {
         //cout << oid << " " << "0 0 " << arr << "-> abort" << endl;// queue 滿 → abort
            AbortList.push_back({oid, 0, 0, arr});
        }
        index++;
    }



    if (q.Isempty()) {
      if (index < n && intdata[index][1] == idleTime) {
        int oid = intdata[index][0];
        int arr = intdata[index][1];
        int dur = intdata[index][2];
        int tol = intdata[index][3];

        //cout << oid << " " << arr << " " << dur << " " << tol << "-> direct start (Q empty)" << endl;

        int startTime = idleTime;
        int finishTime = startTime + dur;

        if (finishTime > tol) {
            int delay = startTime - arr;
            TimeoutList.push_back({oid, 1, delay, finishTime});
        }

        idleTime = finishTime;
        index++;
        continue;
      } else {
        continue;
      }

    }
    int oid, arrival, duration, timeout;
    q.Getfront(oid, arrival, duration, timeout);
   // cout << oid << " " << arrival << " " << duration << " " << timeout << "-> dequeue" << endl;
    q.Dequeue();


    if (timeout < idleTime) {
        int abortTime = idleTime;
        int delay = abortTime - arrival;
        AbortList.push_back({oid, 1, delay, abortTime});
        continue;
    }


    int startTime = idleTime;
    int finishTime = startTime + duration;


    if (finishTime > timeout) {
        int delay = startTime - arrival;
        TimeoutList.push_back({oid, 1, delay, finishTime});
    }

    idleTime = finishTime;
    done++;

}


    fout << "\t[Abort List]\n";
    fout << "\tOID\tCID\tDelay\tAbort\n";
   int i = 1;
   for (int j = 0; j < AbortList.size(); j++) {
      fout << "[" << i << "]\t"
         << AbortList[j][0] << "\t"
         << AbortList[j][1] << "\t"
         << AbortList[j][2] << "\t"
         << AbortList[j][3] << "\n";
      i++;
    }
    fout << "\t[Timeout List]\n";
    fout << "\tOID\tCID\tDelay\tDeparture\n";
    i = 1;
    for (int j = 0; j < TimeoutList.size(); j++) {
      fout << "[" << i << "]\t"
         << TimeoutList[j][0] << "\t"
         << TimeoutList[j][1] << "\t"
         << TimeoutList[j][2] << "\t"
         << TimeoutList[j][3] << "\n";
    i++;
   }


    long long totalDelay = 0;
    for (int i = 0; i < AbortList.size(); i++) {
      totalDelay += AbortList[i][2];
    }

    for (int i = 0; i < TimeoutList.size(); i++) {
      totalDelay += TimeoutList[i][2];
    }

    fout << "[Total Delay]\n" << totalDelay << " min.\n";
    double failurePercentage = (double)(AbortList.size() + TimeoutList.size()) / (n-illegal) * 100.0;
    fout << "[Failure Percentage]\n" << fixed << setprecision(2) << failurePercentage << " %" << "\n";
}

void Two(string filename) {
    Queue qA, qB;
    ofstream fout(filename);
    if (!fout.is_open()) {
      cout << "Cannot open file!" << endl; return;
    }

    int n = intdata.size();

    int index = 0;
    long long idleTimeA = 0, idleTimeB = 0; // 廚師閒置時間

    vector<vector<int>> AbortList;    // {OID, CID, Delay, Abort}
    vector<vector<int>> TimeoutList;  // {OID, CID, Delay, Departure}
    long long totalIdleA = 0, totalIdleB = 0;
    long long totalDelayA = 0, totalDelayB = 0;
    int doneA = 0, doneB = 0;
    int illegal = 0;
    while (index < n || !qA.Isempty() || !qB.Isempty()) {

        // ------------------------
        // 處理 Chef A 佇列 front
        // ------------------------


        while (!qA.Isempty() && (
        (index < n && intdata[index][1] >= idleTimeA) ||
        (index >= n && (idleTimeA <= idleTimeB || qB.Isempty())))){
          int oid, arr, dur, tol;
          qA.Getfront(oid, arr, dur, tol);
          if (idleTimeA > tol) {
            qA.Dequeue();
            int delay = idleTimeA - arr;
            AbortList.push_back({oid, 1, delay, idleTimeA});
           //cout << "Chef 1 abort order " << oid << " due to timeout before start" << endl;
            continue;
          }
          if (index >= n || intdata[index][1] >= idleTimeA) {
            qA.Dequeue();
            long long startTime = arr;
            long long finishTime = startTime + dur;
            if (startTime > idleTimeA) {
              totalIdleA += startTime - idleTimeA;
            }
            if (startTime > idleTimeA) {
              totalIdleA += startTime - idleTimeA;
            }
            idleTimeA = finishTime;
            if (finishTime > tol) {
              int delay = startTime - arr;
              TimeoutList.push_back({oid, 1, delay, (int)finishTime});
              totalDelayA += delay;
            } else {
              totalDelayA += (startTime - arr);
            }
            doneA++;
           //cout << "Chef 1 dequeued order " << oid
               //  << " start=" << startTime << " finish=" << finishTime << endl;
          } else {
            break;
          }

        }


        // ------------------------
        // 處理 Chef B 佇列 front
        // ------------------------

       while (!qB.Isempty() && (
        (index < n && intdata[index][1] >= idleTimeB) ||
        (index >= n && (idleTimeB < idleTimeA || qA.Isempty())))){


          int oid, arr, dur, tol;
          qB.Getfront(oid, arr, dur, tol);
          if (idleTimeB > tol) {
            qB.Dequeue();
            int delay = idleTimeB - arr;
            AbortList.push_back({oid, 2, delay, idleTimeB});
          // cout << "Chef 2 abort order " << oid << " due to timeout before start" << endl;
            continue;
          }
          if (index >= n || intdata[index][1] >= idleTimeB) {
            qB.Dequeue();
            long long startTime;
            if (idleTimeB > arr) {
              startTime = idleTimeB;
            } else {
             startTime = arr;
             }
            long long finishTime = startTime + dur;
            if (startTime > idleTimeB) {
              totalIdleB += startTime - idleTimeB;
             }
            idleTimeB = finishTime;
            if (finishTime > tol) {
              int delay = startTime - arr;
              TimeoutList.push_back({oid, 2, delay, (int)finishTime});
              totalDelayB += delay;
             } else {
               totalDelayB += (startTime - arr);
             }
             doneB++;
           // cout << "Chef 2 dequeued order " << oid
              //   << " start=" << startTime << " finish=" << finishTime << endl;
            } else {
              break;
            }

        }

        // ------------------------
        // 處理新訂單
        // ------------------------
        if (index < n) {
            int oid = intdata[index][0];
            int arr = intdata[index][1];
            int dur = intdata[index][2];
            int tol = intdata[index][3];

            if (arr + dur > tol) {
             index++;
             illegal++;
             continue;
            }

            // 先找 idle 且空佇列
            if (idleTimeA <= arr && qA.Isempty()) {
                long long startTime = arr;
                long long finishTime = startTime + dur;
                if (startTime > idleTimeA) {
                  totalIdleA += startTime - idleTimeA;
                 }
                idleTimeA = finishTime;
                if (finishTime > tol) {
                    int delay = startTime - arr;
                    TimeoutList.push_back({oid, 1, delay, (int)finishTime});
                    totalDelayA += delay;
                } else totalDelayA += (startTime - arr);
                doneA++;
          //  cout << oid << " -> direct start (Chef 1)" << endl;
            } else if (idleTimeB <= arr && qB.Isempty()) {
                long long startTime = arr;
                long long finishTime = startTime + dur;
                if (startTime > idleTimeB) {
                   totalIdleB += startTime - idleTimeB;
                 }
                idleTimeB = finishTime;
                if (finishTime > tol) {
                    int delay = startTime - arr;
                    TimeoutList.push_back({oid, 2, delay, (int)finishTime});
                    totalDelayB += delay;
                } else totalDelayB += (startTime - arr);
                doneB++;
        // cout << oid << " -> direct start (Chef 2)" << endl;
            } else {
                // SQF: 最短佇列 (<3)
                if (qA.Getsize() <= qB.Getsize() && qA.Getsize() < 3) {
                    qA.Enqueue(oid, arr, dur, tol);
                  // cout << oid << " -> inqueue (Chef 1)" << endl;
                } else if (qB.Getsize() < 3) {
                    qB.Enqueue(oid, arr, dur, tol);
                // cout << oid << " -> inqueue (Chef 2)" << endl;
                } else {
                    AbortList.push_back({oid, 0, 0, arr});
                 // cout << oid << " -> abort (all queues full)" << endl;
                }
            }

            index++;
        }
    }

    // ------------------------
    // 輸出結果
    // ------------------------
    fout << "\t[Abort List]\n\tOID\tCID\tDelay\tAbort\n";
    int i = 1;
    for (int j = 0; j < AbortList.size(); j++) {
     fout << "[" << i << "]\t"
         << AbortList[j][0] << "\t"
         << AbortList[j][1] << "\t"
         << AbortList[j][2] << "\t"
         << AbortList[j][3] << "\n";
      i++;
    }
    i = 1;
    fout << "\t[Timeout List]\n\tOID\tCID\tDelay\tDeparture\n";
    for (int j = 0; j < TimeoutList.size(); j++) {
      fout << "[" << i << "]\t"
         << TimeoutList[j][0] << "\t"
         << TimeoutList[j][1] << "\t"
         << TimeoutList[j][2] << "\t"
         << TimeoutList[j][3] << "\n";
    i++;
   }
    long long totalDelay = 0;
    for (int i = 0; i < AbortList.size(); i++) {
      totalDelay += AbortList[i][2];
    }

    for (int i = 0; i < TimeoutList.size(); i++) {
      totalDelay += TimeoutList[i][2];
    }
    fout << "[Total Delay]\n" << totalDelay << " min.\n";

    double failurePercentage = (double)(AbortList.size() + TimeoutList.size())/ (n-illegal) * 100.0;
    fout << "[Failure Percentage]\n" << fixed << setprecision(2) << failurePercentage << " %\n";

}


 void Multiple(int numChefs, string filename) {

    vector<Queue> q(numChefs);                // 多個佇列
    vector<long long> idleTime(numChefs, 0);  // 多個閒置時間

    ofstream fout(filename);
    if (!fout.is_open()) {
      cout << "Cannot open file!"; return;
    }

    int n = intdata.size();
    int index = 0;

    vector<vector<int>> AbortList;    // {OID, CID, Delay, Abort}
    vector<vector<int>> TimeoutList;  // {OID, CID, Delay, Departure}

    vector<long long> totalIdle(numChefs, 0);
    vector<long long> totalDelay(numChefs, 0);
    vector<int> done(numChefs, 0);
    int illegal = 0;
    bool hasNotEmpty = false;
    while (index < n || hasNotEmpty) {
      hasNotEmpty = false;
      for (int i = 0; i < q.size(); i++) {
        if (!q[i].Isempty()) {
          hasNotEmpty = true;
          break;
        }
      }


        // --------------------------
        // 先處理所有廚師的前端訂單
        // --------------------------
        for (int c = 0; c < numChefs; c++) {

            while (!q[c].Isempty() && (index >= n || intdata[index][1] >= idleTime[c])) {
                int oid, arr, dur, tol;
                q[c].Getfront(oid, arr, dur, tol);

                // abort 檢查
                if (idleTime[c] > tol) {
                    q[c].Dequeue();
                    int delay = idleTime[c] - arr;
                    AbortList.push_back({oid, c+1, delay, (int)idleTime[c]});
                  //  cout << "Chef " << c+1 << " abort order " << oid << endl;
                    continue;
                }

                // 如果還有新訂單，且新訂單的 arrival < idleTime → stop
                if (index < n && intdata[index][1] < idleTime[c])
                    break;

                // 可以開始烹飪
                q[c].Dequeue();
                long long startTime;
                if (idleTime[c] > arr) {
                  startTime = idleTime[c];
                } else {
                  startTime = arr;
                }
                long long finishTime = startTime + dur;

                if (startTime > idleTime[c]) {
                   totalIdle[c] += startTime - idleTime[c];
                }
                idleTime[c] = finishTime;

                int delay = startTime - arr;

                if (finishTime > tol)
                    TimeoutList.push_back({oid, c+1, delay, (int)finishTime});

                totalDelay[c] += delay;

                done[c]++;

               // cout << "Chef " << c+1 << " dequeued order " << oid
                  //   << " start=" << startTime << " finish=" << finishTime << endl;
            }
        }

        // --------------------------
        // 沒有新訂單就跳迴圈
        // --------------------------
        if (index >= n) continue;

        // --------------------------
        // 處理新訂單
        // --------------------------
        int oid = intdata[index][0];
        int arr = intdata[index][1];
        int dur = intdata[index][2];
        int tol = intdata[index][3];

        // 1. 找 idle & empty
        if (arr + dur > tol) {
          index++;
          continue;
        }
        bool assigned = false;
        for (int c = 0; c < numChefs; c++) {
            if (idleTime[c] <= arr && q[c].Isempty()) {
                long long startTime = arr;
                long long finishTime = startTime + dur;

               if (startTime > idleTime[c]){
                 totalIdle[c] += startTime - idleTime[c];
               }
                idleTime[c] = finishTime;

                int delay = startTime - arr;
                if (finishTime > tol)
                    TimeoutList.push_back({oid, c+1, delay, (int)finishTime});
                totalDelay[c] += delay;

                done[c]++;
                assigned = true;

               // cout << oid << " -> direct start (Chef " << c+1 << ")\n";
                break;
            }
        }

        // 2. SQF：最短佇列 (<3)
        if (!assigned) {
            int bestChef = -1;
            int bestSize = 10;

            for (int c = 0; c < numChefs; c++) {
                if (q[c].Getsize() < 3 && q[c].Getsize() < bestSize) {
                    bestSize = q[c].Getsize();
                    bestChef = c;
                }
            }

            if (bestChef != -1) {
                q[bestChef].Enqueue(oid, arr, dur, tol);
               // cout << oid << " -> inqueue (Chef " << bestChef+1 << ")\n";
                assigned = true;
            }
        }

        // 3. 沒地方放 → abort
        if (!assigned) {
            AbortList.push_back({oid, 0, 0, arr});
          // cout << oid << " -> abort (all queues full)\n";
        }

        index++;
    }

    // --------------------------
    // 輸出結果
    // --------------------------
    fout << "\t[Abort List]\n\tOID\tCID\tDelay\tAbort\n";
    int i = 1;
    for (int j = 0; j < AbortList.size(); j++) {
      fout << "[" << i << "]\t"
         << AbortList[j][0] << "\t"
         << AbortList[j][1] << "\t"
         << AbortList[j][2] << "\t"
         << AbortList[j][3] << "\n";
      i++;
    }

    fout << "\t[Timeout List]\n\tOID\tCID\tDelay\tDeparture\n";
    i = 1;
    for (int j = 0; j < TimeoutList.size(); j++) {
      fout << "[" << i << "]\t"
         << TimeoutList[j][0] << "\t"
         << TimeoutList[j][1] << "\t"
         << TimeoutList[j][2] << "\t"
         << TimeoutList[j][3] << "\n";
    i++;
   }

    long long totalDelaySum = 0;
    for (int i = 0; i < AbortList.size(); i++) {
      totalDelaySum += AbortList[i][2];
     }

    for (int i = 0; i < TimeoutList.size(); i++) {
      totalDelaySum += TimeoutList[i][2];
    }

    fout << "[Total Delay]\n" << totalDelaySum << " min.\n";

    double failurePercentage = (double)(AbortList.size() + TimeoutList.size()) / (n-illegal) * 100.0;
    fout << fixed << setprecision(2);
    fout << "[Failure Percentage]\n" << failurePercentage << " %\n";
}

};

int Hasdot(string str) {
  if (str.length() == 0) {
    return 0;
  }
  int dot_index;
  for (int i = 0; i < str.size(); i++) {
    if (i == 0 && str[i] == '-') {
      continue;
    }
    if (str[i] == '.') {
      dot_index = i;
      break;
    }
  }
  if (dot_index == 1) {
    int num = str[0] - '0';
    return num;
  }
  return 0;
}
// 檢查字串是否全為數字
bool Checkstring(string str) {
  if (str.length() == 0) {
    return false;
  }
  for (int i = 0; i < str.size(); i++) {
    if (i == 0 && str[i] == '-') {
      return false;
    }
    if (str[i] < '0' || str[i] > '9') {
      return false;
    }
  }
  return true;
}
int main() {
  Data d;
  string filenumber;
  bool command2 = false;
  while (1) {
    cout << "*** (^_^) Data Structure (^o^) ***" << endl;
    cout << "** Simulate FIFO Queues by SQF ***" << endl;
    cout << "* 0. Quit                        *" << endl;
    cout << "* 1. Sort a file                 *" << endl;
    cout << "* 2. Simulate one FIFO queue     *" << endl;
    cout << "* 3. Simulate two queues by SQF  *" << endl;
    cout << "* 4. Simulate some queues by SQF *" << endl;
    cout << "**********************************" << endl;
    string command;
    cout << "Input a command(0, 1, 2, 3, 4): ";
    cin >> command;
    int hasdot = Hasdot(command);
    if (command == "1" || hasdot == 1) {
      d.Clean();
      cout << "\nInput a file number (e.g., 401, 402, 403, ...): ";
      cin >> filenumber;
      cout << endl;
      string filename = "input" + filenumber + ".txt";
      double readtime = d.Read(filename);
      if (readtime == -1) {
        continue;
      }
      d.Print();
      cout << endl;

      d.Stringtoint();
      double sorttime = d.shellSort();

      string sortfilename = "sorted" + filenumber + ".txt";
      double writetime = d.WriteFile(sortfilename);

      cout << "Reading data: " << readtime << " us." << endl;
      cout << endl;
      cout << "Sorting data: " << sorttime << " us." << endl;
      cout << endl;
      cout << "Writing data: " << writetime << " us." << endl;
      cout << endl;
      command2 = false;
    } else if (command == "2" || hasdot == 2) {
      d.Clean();
      cout << "\nInput a file number (e.g., 401, 402, 403, ...): ";
      cin >> filenumber;
      cout << endl;
      string filename = "sorted" + filenumber + ".txt";
      double readtime = d.Read(filename);
      if (readtime == -1) {
        continue;
      }
      d.Stringtoint();
      d.Print();
      cout << endl;
      string onefilename = "one" + filenumber + ".txt";
      d.One(onefilename);
      command2 = true;
    } else if (command == "3" || hasdot == 3) {
      cout << endl;
      if (command2) {
        string onefilename = "two" + filenumber + ".txt";
        d.Two(onefilename);
      } else {
        cout << "### Execute command 2 first! ###" << endl;
        cout << endl;
      }
    } else if (command == "4" || hasdot == 4) {
      cout << endl;
      if (command2) {
        int number;
        cout << "Input the number of queues: ";
        cin >> number;
        cout << endl;
        if (number == 2) {
          string onefilename = "two" + filenumber + ".txt";
          d.Two(onefilename);
        } else {
          string anyfilename = "any" + filenumber + ".txt";
          d.Multiple(number, anyfilename);
        }
      } else {
        cout << "### Execute command 2 first! ###" << endl;
        cout << endl;
      }
    } else if (command == "0") {
      break;
    } else if (Checkstring(command) || (hasdot >= 1 && hasdot <= 4)) {
      cout << "\nCommand does not exist!" << endl;
      cout << endl;
    } else {
      break;
    }
  }
  return 0;
}
